/* 
  This can be inferred, but 
  This only works with an expected type, such as an argument, 
  typed declaration, etc.
*/
@[inline]
fn Some!<T>(t: T) -> Option!<T> {
  return Option!<T>::Some(t);
}

// This can be inferred, but 
// This only works with an expected type, such as an argument, 
// typed declaration, etc.
@[inline]
fn None!<T>() -> T {
  return T::None;
}